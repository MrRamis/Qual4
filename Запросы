
--1
Update dbo.Заказы set dbo.Заказы.ДатаРазмещения = DATEADD(year,28, dbo.Заказы.ДатаРазмещения)
Update dbo.Заказы set dbo.Заказы.ДатаИсполнения = DATEADD(year,28, dbo.Заказы.ДатаИсполнения)
Update dbo.Сотрудники set dbo.Сотрудники.ДатаРождения = DATEADD(year,28, dbo.Сотрудники.ДатаРождения)
Update dbo.Сотрудники set dbo.Сотрудники.ДатаНайма = DATEADD(year,28, dbo.Сотрудники.ДатаНайма) 
--2
SELECT КодПоставщика, COUNT(*) AS 'Количество товаров' 
FROM Товары 
GROUP BY КодПоставщика 
--3
SELECT КодТипа, COUNT(*) AS 'Количество товаров' 
FROM Товары
GROUP BY КодТипа 
--4 выбрать категории товаров, которые заказывают чаще всего,
SELECT        TOP (1) COUNT(dbo.Типы.Категория) AS Expr1, dbo.Типы.Категория
FROM            dbo.Товары INNER JOIN
                         dbo.Типы ON dbo.Товары.КодТипа = dbo.Типы.КодТипа
GROUP BY dbo.Типы.Категория
--5 вывести количество проданных товаров в каждой категории по годам
SELECT        dbo.Заказы.ДатаИсполнения, dbo.Заказано.Количество, dbo.Типы.Категория
FROM            dbo.Заказано INNER JOIN
                         dbo.Заказы ON dbo.Заказано.КодЗаказа = dbo.Заказы.КодЗаказа INNER JOIN
                         dbo.Товары ON dbo.Заказано.КодТовара = dbo.Товары.КодТовара INNER JOIN
                         dbo.Типы ON dbo.Товары.КодТипа = dbo.Типы.КодТипа
--6 вывести название страны, поставившей больше всего продуктов по количеству,
SELECT TOP 1 dbo.Заказано2$.Количество, dbo.Поставщики$.СтранаFROM   dbo.Типы$ INNER JOIN
             dbo.Товары$ INNER JOIN             dbo.Поставщики$ ON dbo.Товары$.КодПоставщика = dbo.Поставщики$.КодПоставщика ON dbo.Типы$.КодТипа = dbo.Товары$.КодТипа INNER JOIN
             dbo.Заказано2$ ON dbo.Товары$.КодТовара = dbo.Заказано2$.КодТовара INNER JOIN             dbo.Клиенты$ INNER JOIN
             dbo.Заказы$ ON dbo.Клиенты$.КодКлиента = dbo.Заказы$.КодКлиента INNER JOIN             dbo.Сотрудники$ ON dbo.Заказы$.КодСотрудника = dbo.Сотрудники$.КодСотрудника ON dbo.Заказано2$.КодЗаказа = dbo.Заказы$.КодЗаказа
GROUP BY dbo.Заказано2$.Количество, dbo.Поставщики$.СтранаORDER BY SUM(Количество) DESC
--7 
SELECT КодТовара, Цена 
FROM Товары 
WHERE Цена > (SELECT AVG(Цена) FROM Товары)
